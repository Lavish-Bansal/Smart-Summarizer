
pipeline {
  agent any

  environment {
    IMAGE_NAME = "smart-summarizer"
    IMAGE_TAG = "v${env.BUILD_NUMBER}"
    MAX_REPOS = "50"
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Build (Node)') {
      steps {
        sh 'npm install'
        sh 'npm run build'
      }
    }

    stage('Docker Build') {
      steps {
        withCredentials([string(credentialsId: 'api-key', variable: 'API_KEY_VALUE')]) {
          
          // Pass the token to the Docker build command using --build-arg
          sh "docker build \
            --build-arg VITE_RAPID_API_KEY=${API_KEY_VALUE} \
            --build-arg VITE_MAX_REPOS=${MAX_REPOS} \
            -t ${IMAGE_NAME}:${IMAGE_TAG} ."
        }
      }
    }

  stage('Deploy image'){
    steps{
      sh 'docker run -d -p 8081:80 $IMAGE_NAME:$IMAGE_TAG'
    }
   }
  }

  post {
    always {
      echo "âœ… Image pushed: $IMAGE_NAME:$IMAGE_TAG"
    }
  }
}
