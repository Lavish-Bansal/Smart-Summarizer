pipeline{
    agent{
        docker{
            image 'node:20-alpine'
            args '--user=root -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    stages{
        stage('checkout'){
            steps {checkout scm}
        }

        stage('install'){
            steps {sh 'npm install'}
        }

        stage('run dev build'){
            steps {sh 'npm run build'}
        }

        stage('Build docker image'){
            steps {
                sh 'docker build -t vite-dev-app .'
            }
        }
    }
}